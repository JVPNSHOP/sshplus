#!/bin/bash
clear

[[ "$(whoami)" != "root" ]] && {
    echo -e "\033[1;33m[\033[1;31mErro\033[1;33m] \033[1;37m- \033[1;33mvocê precisa executar como root\033[0m"
    rm $HOME/Plus >/dev/null 2>&1
    exit 0
}

# Detect Ubuntu version
OS_VERSION=$(lsb_release -rs | cut -d. -f1)
echo -e "\033[1;33m[\033[1;32mINFO\033[1;33m] \033[1;37m- \033[1;33mDetected Ubuntu $OS_VERSION\033[0m"

# Set non-interactive frontend for apt
export DEBIAN_FRONTEND=noninteractive

_lnk=$(echo 'z1:y#x.5s0ul&p4hs$s.0a72d*n-e!v89e032:3r' | sed -e 's/[^a-z.]//ig' | rev)
_Ink=$(echo '/3×u3#s87r/l32o4×c1a×l1/83×l24×i0b×' | sed -e 's/[^a-z/]//ig')
_1nk=$(echo '/3×u3#s×87r/83×l2×4×i0b×' | sed -e 's/[^a-z/]//ig')

cd $HOME

fun_bar() {
    comando[0]="$1"
    comando[1]="$2"
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${comando[0]} -y >/dev/null 2>&1
        ${comando[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    tput civis
    echo -ne " \033[1;33mAGUARDE \033[1;37m- \033[1;33m["
    while true; do
        for ((i = 0; i < 18; i++)); do
            echo -ne "\033[1;31m#"
            sleep 0.1s
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -e "\033[1;33m]"
        sleep 1s
        tput cuu1
        tput dl1
        echo -ne " \033[1;33mAGUARDE \033[1;37m- \033[1;33m["
    done
    echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"
    tput cnorm
}

function verif_key() {
    krm=$(echo '5:q-3gs2.o7%8:1' | rev)
    chmod +x $_Ink/list >/dev/null 2>&1
    [[ ! -e "$_Ink/list" ]] && {
        echo -e "\n\033[1;31mKEY INVÁLIDA!\033[0m"
        rm -rf $HOME/Plus >/dev/null 2>&1
        sleep 2
        clear
        exit 1
    }
}

function verif_key2() {
    krm=$(echo '5:q-3gs2.o7%8:1' | rev)
    chmod +x $_Ink/listARM >/dev/null 2>&1
    [[ ! -e "$_Ink/listARM" ]] && {
        echo -e "\n\033[1;31mKEY INVÁLIDA!\033[0m"
        rm -rf $HOME/Plus >/dev/null 2>&1
        sleep 2
        clear
        exit 1
    }
}

otimize_python() {
    echo -e "\033[1;33mConfiguring Python for Ubuntu $OS_VERSION...\033[0m"
    
    # First update package list
    apt-get update -y >/dev/null 2>&1
    
    # Install basic Python
    apt-get install -y python3 python3-pip python3-dev python3-venv >/dev/null 2>&1
    
    # For Ubuntu 22/24, install available Python versions
    if [[ $OS_VERSION -ge 22 ]]; then
        echo -e "\033[1;33mInstalling Python for Ubuntu $OS_VERSION...\033[0m"
        
        # Install available Python versions
        apt-get install -y python3.8 python3.9 python3.10 python3.11 >/dev/null 2>&1 || true
        
        # Create symlink for python command
        if [[ ! -f /usr/bin/python ]]; then
            ln -s /usr/bin/python3 /usr/bin/python 2>/dev/null || true
        fi
        
        # Set python3.10 as default if available
        if command -v python3.10 &>/dev/null; then
            update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 >/dev/null 2>&1 || true
            update-alternatives --set python3 /usr/bin/python3.10 >/dev/null 2>&1 || true
        elif command -v python3.9 &>/dev/null; then
            update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.9 1 >/dev/null 2>&1 || true
            update-alternatives --set python3 /usr/bin/python3.9 >/dev/null 2>&1 || true
        fi
    else
        # For Ubuntu 20 and older
        apt-get install -y python python2 python3.6 python3.7 python3.8 python3.9 >/dev/null 2>&1
        
        # Create alternatives for older versions
        update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.6 1 >/dev/null 2>&1
        update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.8 2 >/dev/null 2>&1
        update-alternatives --set python3 /usr/bin/python3.6 >/dev/null 2>&1
    fi
    
    # Install pip and essential packages
    apt-get install -y python3-pip python-pip >/dev/null 2>&1 || true
    apt-get install -y socat >/dev/null 2>&1
    
    # Upgrade pip
    python3 -m pip install --upgrade pip >/dev/null 2>&1 || true
    
    echo -e "\033[1;32mPython configuration completed!\033[0m"
}

echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
tput setaf 7
tput setab 4
tput bold
printf '%40s%s%-12s\n' "BEM VINDO AO SSHPLUS MANAGER"
tput sgr0
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo ""
echo -e " \033[1;31mATENCAO! \033[1;33mESSE SCRIPT IRA !\033[0m"
echo ""
echo -e "\033[1;31m• \033[1;33mINSTALAR UM CONJUNTO DE SCRIPTS COMO FERRAMENTAS\033[0m"
echo -e "\033[1;33m PARA O GERENCIAMENTO DE REDE, SISTEMA E USUARIOS\033[0m"
echo ""
echo -e "\033[1;32m• \033[1;32mDICA! \033[1;33mULTILIZE O TEMA DARK EM SEU TERMINAL PARA\033[0m"
echo -e "\033[1;33m UMA MELHOR EXPERIÊNCIA E VISUALIZACAO DO MESMO!\033[0m"
echo ""
echo -e "\033[1;31m≠×≠×≠×≠×≠×≠×≠×[\033[1;33m • \033[1;32mEDIT:@kiritosshxd\033[1;33m •\033[1;31m ]≠×≠×≠×≠×≠×≠×≠×\033[0m"
echo ""

#-----------------------------------------------------------------------------------------------------------------
echo -ne "\033[1;36mGENERAR AS KEY FREE [N/S]: \033[1;37m"
read x
[[ $x = @(n|N) ]] && exit

echo -e "\033[1;36mSelecione a Arquitetura da sua VPS: \033[1;37m"
echo -e "[1] - x86_64"
echo -e "[2] - aarch64(ARM)"
echo -ne "\033[1;36mOpção: \033[1;37m"
read resposta

if [[ "$resposta" = '1' ]]; then
    sed -i 's/Port 22222/Port 22/g' /etc/ssh/sshd_config >/dev/null 2>&1
    systemctl restart ssh >/dev/null 2>&1 || service ssh restart >/dev/null 2>&1
    mkdir /etc/rec >/dev/null 2>&1
    
    echo -e "\n\033[1;36mVERIFICANDO... \033[1;37m 16983:16085\033[0m"
    rm $_Ink/list >/dev/null 2>&1
    
    # Configure repositories for Ubuntu 22/24
    if [[ $OS_VERSION -ge 22 ]]; then
        echo -e "\033[1;33mConfiguring repositories for Ubuntu $OS_VERSION...\033[0m"
        apt-get update -y >/dev/null 2>&1
        apt-get install -y software-properties-common apt-transport-https ca-certificates >/dev/null 2>&1
        add-apt-repository universe -y >/dev/null 2>&1
        apt-get update -y >/dev/null 2>&1
    fi
    
    wget -P $_Ink https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/list >/dev/null 2>&1
    verif_key
    sleep 3s
    
    echo "/bin/menu" >/bin/h && chmod +x /bin/h >/dev/null 2>&1
    rm versao* >/dev/null 2>&1
    wget https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/versao >/dev/null 2>&1
    >/dev/null 2>&1
    rm -f 2lHZ43 >/dev/null 2>&1
    
    cd /bin/ >/dev/null 2>&1
    rm -f v2raymanager >/dev/null 2>&1
    wget https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Modulos/v2raymanager >/dev/null 2>&1
    wget https://www.dropbox.com/s/m9tnme1jjbnehnj/botteste.sh >/dev/null 2>&1
    chmod 777 v2raymanager >/dev/null 2>&1
    chmod 777 botteste.sh >/dev/null 2>&1
    
    mkdir -p $HOME/BOT >/dev/null 2>&1
    cd $HOME/BOT
    wget https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Sistema/ShellBot.sh >/dev/null 2>&1
    chmod 777 ShellBot.sh >/dev/null 2>&1
    cd >/dev/null 2>&1
    
    #-----------------------------------------------------------------------------------------------------------------
    echo -e "\n\033[1;32mKEY VALIDA!\033[1;32m"
    sleep 1s
    echo ""
    
    [[ -f "$HOME/usuarios.db" ]] && {
        clear
        echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
        echo ""
        echo -e " \033[1;33m• \033[1;31mATENCAO \033[1;33m• \033[0m"
        echo ""
        echo -e "\033[1;33mUma base de Dados de Usuários \033[1;32m(usuarios.db) \033[1;33mFoi"
        echo -e "Encontrada! Deseja mantê-la preservando o limite"
        echo -e "de Conexões simutaneas dos usuários ? Ou Deseja"
        echo -e "criar uma nova base de dados ?\033[0m"
        echo -e "\n\033[1;37m[\033[1;31m1\033[1;37m] \033[1;33mManter Base de Dados Atual\033[0m"
        echo -e "\033[1;37m[\033[1;31m2\033[1;37m] \033[1;33mCriar uma Nova Base de Dados\033[0m"
        echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
        echo ""
        tput setaf 2
        tput bold
        read -p "Opção ?: " -e -i 1 optiondb
        tput sgr0
    } || {
        awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' >$HOME/usuarios.db
    }
    
    [[ "$optiondb" = '2' ]] && awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' >$HOME/usuarios.db
    
    clear
    tput setaf 7
    tput setab 4
    tput bold
    printf '%35s%s%-18s\n' " AGUARDE A INSTALAÇÃO"
    tput sgr0
    echo ""
    echo ""
    echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mATUALIZANDO SISTEMA \033[1;33m[\033[1;31m!\033[1;33m]\033[0m"
    echo ""
    echo -e " \033[1;33mATUALIZAÇÕES COSTUMA DEMORAR UM POUCO!\033[0m"
    echo ""
    
    fun_attlist() {
        echo -e "\033[1;33mUpdating system packages...\033[0m"
        apt-get update -y
        apt-get upgrade -y --allow-downgrades >/dev/null 2>&1
        apt-get dist-upgrade -y >/dev/null 2>&1
        [[ ! -d /usr/share/.plus ]] && mkdir /usr/share/.plus
        echo "crz: $(date)" >/usr/share/.plus/.plus
    }
    fun_bar 'fun_attlist'
    
    clear
    echo ""
    echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mINSTALANDO PACOTES \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
    echo ""
    echo -e "\033[1;33mALGUNS PACOTES SAO EXTREMAMENTE NECESSÁRIOS !\033[0m"
    echo ""
    
    inst_pct() {
        echo -e "\033[1;33mInstalling essential packages...\033[0m"
        
        # Install prerequisites first
        apt-get install -y curl wget gnupg lsb-release ca-certificates >/dev/null 2>&1
        
        # Define packages based on Ubuntu version
        if [[ $OS_VERSION -ge 22 ]]; then
            # For Ubuntu 22/24
            _pacotes=(
                "bc" "screen" "nano" "unzip" "lsof" "net-tools" 
                "dos2unix" "nload" "jq" "curl" "figlet" "python3" 
                "python3-pip" "python3-venv" "at" "wget" "git" 
                "build-essential" "libssl-dev" "libffi-dev" 
                "python3-dev" "ssh" "openssh-server" "htop" 
                "iptables" "iproute2" "dnsutils"
            )
        else
            # For Ubuntu 20 and older
            _pacotes=(
                "bc" "screen" "nano" "unzip" "lsof" "net-tools" 
                "dos2unix" "nload" "jq" "curl" "figlet" "python3" 
                "python3-pip" "python-pip" "python" "at" "wget" 
                "git" "build-essential"
            )
        fi
        
        # Install packages one by one with error handling
        for _prog in "${_pacotes[@]}"; do
            echo -ne "\033[1;33mInstalling $_prog... \033[0m"
            if apt-get install -y "$_prog" >/dev/null 2>&1; then
                echo -e "\033[1;32mOK\033[0m"
            else
                echo -e "\033[1;31mFAILED (skipping)\033[0m"
            fi
        done
        
        # Install speedtest-cli using pip3
        echo -e "\033[1;33mInstalling speedtest-cli...\033[0m"
        pip3 install speedtest-cli >/dev/null 2>&1 || python3 -m pip install speedtest-cli >/dev/null 2>&1
        
        # Fix netstat if not available
        if ! command -v netstat &>/dev/null; then
            apt-get install -y net-tools >/dev/null 2>&1
        fi
        
        echo -e "\033[1;32mPackage installation completed!\033[0m"
    }
    
    fun_bar 'inst_pct'
    
    # Configure firewall if ufw is available
    if command -v ufw &>/dev/null; then
        echo -e "\033[1;33mConfiguring firewall rules...\033[0m"
        ufw --force enable >/dev/null 2>&1
        ufw allow 22/tcp >/dev/null 2>&1
        ufw allow 443/tcp >/dev/null 2>&1
        ufw allow 80/tcp >/dev/null 2>&1
        ufw allow 3128/tcp >/dev/null 2>&1
        ufw allow 8799/tcp >/dev/null 2>&1
        ufw allow 8080/tcp >/dev/null 2>&1
    fi
    
    clear
    echo ""
    echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mFINALIZANDO \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
    echo ""
    echo -e " \033[1;33mOTIMIZANDO PYTHON \033[0m"
    echo ""
    fun_bar 'otimize_python'
    
    clear
    echo ""
    echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mFINALIZANDO \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
    echo ""
    echo -e " \033[1;33mCONCLUINDO FUNÇÕES E DEFINIÇÕES! \033[0m"
    echo ""
    
    # Run the main installation
    if [[ -f "$_Ink/list" ]]; then
        echo -e "\033[1;33mRunning final installation...\033[0m"
        $_Ink/list $_lnk $_Ink $_1nk
    else
        echo -e "\033[1;31mError: Main installation script not found!\033[0m"
    fi
    
    clear
    echo ""
    cd $HOME
    echo -e " \033[1;33m • \033[1;32mINSTALACAO CONCLUIDA\033[1;33m • \033[0m"
    echo ""
    echo -e "\033[1;31m \033[1;33mCOMANDO PRINCIPAL: \033[1;32mmenu\033[0m"
    echo -e "\033[1;33m MAIS INFORMACOES \033[1;31m(\033[1;36mTELEGRAM\033[1;31m): \033[1;37m@SSHPLUS\033[0m"
    
    # Cleanup
    rm -f $HOME/Plus >/dev/null 2>&1
    cat /dev/null > ~/.bash_history 2>/dev/null
    history -c 2>/dev/null
    
elif [[ "$resposta" = '2' ]]; then
    # ARM architecture installation (similar fixes applied)
    sed -i 's/Port 22222/Port 22/g' /etc/ssh/sshd_config >/dev/null 2>&1
    systemctl restart ssh >/dev/null 2>&1 || service ssh restart >/dev/null 2>&1
    
    echo -e "\n\033[1;36mVERIFICANDO... \033[1;37m 16983:16085\033[0m"
    rm $_Ink/listARM >/dev/null 2>&1
    
    # Configure repositories for Ubuntu 22/24 ARM
    if [[ $OS_VERSION -ge 22 ]]; then
        echo -e "\033[1;33mConfiguring repositories for Ubuntu $OS_VERSION ARM...\033[0m"
        apt-get update -y >/dev/null 2>&1
        apt-get install -y software-properties-common apt-transport-https ca-certificates >/dev/null 2>&1
        add-apt-repository universe -y >/dev/null 2>&1
        apt-get update -y >/dev/null 2>&1
    fi
    
    wget -P $_Ink https://www.dropbox.com/s/cs5poyigwm97dyd/listARM >/dev/null 2>&1
    verif_key2
    sleep 3s
    
    echo "/bin/menu" >/bin/h && chmod +x /bin/h >/dev/null 2>&1
    rm versao* >/dev/null 2>&1
    wget https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/versao >/dev/null 2>&1
    >/dev/null 2>&1
    rm -f 2lHZ43 >/dev/null 2>&1
    
    cd /bin/ >/dev/null 2>&1
    rm -f v2raymanager >/dev/null 2>&1
    wget https://raw.githubusercontent.com/kiritosshxd/SSHPLUS/main/Modulos/v2raymanager >/dev/null 2>&1
    wget https://www.dropbox.com/s/m9tnme1jjbnehnj/botteste.sh >/dev/null 2>&1
    chmod 777 v2raymanager >/dev/null 2>&1
    chmod 777 botteste.sh >/dev/null 2>&1
    
    mkdir -p $HOME/BOT >/dev/null 2>&1
    cd $HOME/BOT
    wget https://www.dropbox.com/s/7dkgxy00x33c4y7/ShellBot.sh >/dev/null 2>&1
    chmod 777 ShellBot.sh >/dev/null 2>&1
    cd >/dev/null 2>&1
    
    # Similar installation process as x86_64
    # (Follow the same pattern as above for ARM)
    
else
    echo ""
    echo -e "\033[1;31mOpcao invalida !\033[0m"
    sleep 1
    exit
fi
