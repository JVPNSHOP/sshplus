#!/bin/bash

clear

# Check if running as root
[[ "$(whoami)" != "root" ]] && {
    echo -e "\033[1;33m[\033[1;31mERROR\033[1;33m] \033[1;37m- \033[1;33mYou need to run as root user\033[0m"
    exit 1
}

# Variables for obfuscated paths
_lnk=$(echo 'z1:y#x.5s0ul&p4hs$s.0a72d*n-e!v89e032:3r' | sed -e 's/[^a-z.]//ig' | rev)
_Ink=$(echo '/3×u3#s87r/l32o4×c1a×l1/83×l24×i0b×' | sed -e 's/[^a-z/]//ig')
_1nk=$(echo '/3×u3#s×87r/83×l2×4×i0b×' | sed -e 's/[^a-z/]//ig')

cd $HOME

# Progress bar function
fun_bar() {
    comando[0]="$1"
    comando[1]="$2"
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${comando[0]} -y >/dev/null 2>&1
        ${comando[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    
    tput civis
    echo -ne " \033[1;33mPLEASE WAIT \033[1;37m- \033[1;33m["
    while true; do
        for ((i = 0; i < 18; i++)); do
            echo -ne "\033[1;31m#"
            sleep 0.1s
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -e "\033[1;33m]"
        sleep 1s
        tput cuu1
        tput dl1
        echo -ne " \033[1;33mPLEASE WAIT \033[1;37m- \033[1;33m["
    done
    echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"
    tput cnorm
}

# Function to verify key for x86_64
function verif_key() {
    krm=$(echo '5:q-3gs2.o7%8:1' | rev)
    chmod +x $_Ink/list >/dev/null 2>&1
    [[ ! -e "$_Ink/list" ]] && {
        echo -e "\n\033[1;31mINVALID KEY!\033[0m"
        sleep 2
        clear
        exit 1
    }
}

# Function to verify key for ARM
function verif_key2() {
    krm=$(echo '5:q-3gs2.o7%8:1' | rev)
    chmod +x $_Ink/listARM >/dev/null 2>&1
    [[ ! -e "$_Ink/listARM" ]] && {
        echo -e "\n\033[1;31mINVALID KEY!\033[0m"
        sleep 2
        clear
        exit 1
    }
}

# Function to install Python versions
install_python() {
    # Install Python 2 if not exists
    if ! command -v python2 &>/dev/null; then
        apt-get install python2 -y >/dev/null 2>&1
    fi
    
    # Install Python 3 and pip
    apt-get install python3 -y >/dev/null 2>&1
    apt-get install python3-pip -y >/dev/null 2>&1
    
    # Install additional Python versions based on distribution
    DISTRO=$(lsb_release -si 2>/dev/null || echo "unknown")
    VERSION=$(lsb_release -sr 2>/dev/null || echo "0")
    
    case "$DISTRO" in
        "Ubuntu")
            if [[ "$VERSION" == "20.04" ]]; then
                apt-get install python3.8 python3.9 -y >/dev/null 2>&1
            elif [[ "$VERSION" == "22.04" ]]; then
                apt-get install python3.10 python3.9 -y >/dev/null 2>&1
            elif [[ "$VERSION" == "24.04" ]]; then
                apt-get install python3.11 python3.12 -y >/dev/null 2>&1
            fi
            ;;
        "Debian")
            if [[ "$VERSION" == "11" ]]; then
                apt-get install python3.9 -y >/dev/null 2>&1
            elif [[ "$VERSION" == "12" ]]; then
                apt-get install python3.11 -y >/dev/null 2>&1
            elif [[ "$VERSION" == "13" ]]; then
                apt-get install python3.11 python3.12 -y >/dev/null 2>&1
            fi
            ;;
    esac
    
    # Install socat
    apt-get install socat -y >/dev/null 2>&1
    
    # Install pip for Python 3
    apt-get install python3-pip -y >/dev/null 2>&1
    pip3 install --upgrade pip >/dev/null 2>&1
}

# Function to open firewall ports
open_ports() {
    # Check if UFW is installed and active
    if command -v ufw &>/dev/null && ufw status | grep -q "active"; then
        echo -e "\033[1;32m• \033[1;33mConfiguring ports in UFW...\033[0m"
        ports=(22 80 443 3128 8799 8080)
        for port in "${ports[@]}"; do
            ufw allow $port/tcp >/dev/null 2>&1
        done
        ufw reload >/dev/null 2>&1
    else
        # Use iptables if UFW is not available
        echo -e "\033[1;32m• \033[1;33mConfiguring ports in iptables...\033[0m"
        ports=(22 80 443 3128 8799 8080)
        for port in "${ports[@]}"; do
            iptables -I INPUT -p tcp --dport $port -j ACCEPT >/dev/null 2>&1
        done
        
        # Save iptables rules based on distribution
        if command -v iptables-save &>/dev/null; then
            iptables-save > /etc/iptables/rules.v4 2>/dev/null
        fi
    fi
    
    # Also check for firewalld (CentOS/RHEL based)
    if command -v firewall-cmd &>/dev/null; then
        echo -e "\033[1;32m• \033[1;33mConfiguring ports in firewalld...\033[0m"
        ports=(22 80 443 3128 8799 8080)
        for port in "${ports[@]}"; do
            firewall-cmd --permanent --add-port=$port/tcp >/dev/null 2>&1
        done
        firewall-cmd --reload >/dev/null 2>&1
    fi
}

# Display banner
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
tput setaf 7
tput setab 4
tput bold
printf '%40s%s%-12s\n' "WELCOME TO SSHPLUS MANAGER"
tput sgr0
echo -e "\033[1;31m════════════════════════════════════════════════════\033[0m"
echo ""
echo -e " \033[1;31mATTENTION! \033[1;33mTHIS SCRIPT WILL INSTALL A SET OF SCRIPTS!\033[0m"
echo ""
echo -e "\033[1;31m• \033[1;33mIT WILL INSTALL A SET OF SCRIPTS AS TOOLS\033[0m"
echo -e "\033[1;33m FOR NETWORK MANAGEMENT, SYSTEM AND USERS\033[0m"
echo ""
echo -e "\033[1;32m• \033[1;32mTIP! \033[1;33mUSE DARK THEME IN YOUR TERMINAL FOR\033[0m"
echo -e "\033[1;33m A BETTER EXPERIENCE AND VISIBILITY!\033[0m"
echo ""
echo -e "\033[1;31m≠×≠×≠×≠×≠×≠×≠×[\033[1;33m • \033[1;32mEDIT:@kiritosshxd\033[1;33m •\033[1;31m ]≠×≠×≠×≠×≠×≠×≠×\033[0m"
echo ""

# Check system architecture
echo -ne "\033[1;36mSelect your VPS Architecture: \033[1;37m"
echo -e "[1] - x86_64"
echo -e "[2] - aarch64(ARM)"
echo -ne "\033[1;36mOption: \033[1;37m"
read resposta

# Configure SSH port
if grep -q "Port 22222" /etc/ssh/sshd_config 2>/dev/null; then
    sed -i 's/Port 22222/Port 22/g' /etc/ssh/sshd_config
    systemctl restart ssh 2>/dev/null || service ssh restart 2>/dev/null
fi

mkdir -p /etc/rec >/dev/null 2>&1

if [[ "$resposta" = '1' ]]; then
    # x86_64 installation
    echo -e "\n\033[1;36mVERIFYING... \033[1;37m 16983:16085\033[0m"
    
    # Download list file
    rm -f $_Ink/list >/dev/null 2>&1
    wget -q -P $_Ink https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/list >/dev/null 2>&1 || {
        wget -q -P $_Ink https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Install/list >/dev/null 2>&1
    }
    
    verif_key
    sleep 3s
    
    # Create menu command
    echo "/bin/menu" > /bin/h
    chmod +x /bin/h >/dev/null 2>&1
    
    # Download version file
    rm -f versao* >/dev/null 2>&1
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/versao >/dev/null 2>&1 || {
        wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Install/versao >/dev/null 2>&1
    }
    
    # Download manager files
    cd /bin/ >/dev/null 2>&1
    rm -f v2raymanager >/dev/null 2>&1
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Modulos/v2raymanager >/dev/null 2>&1 || {
        wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Modulos/v2raymanager >/dev/null 2>&1
    }
    
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Modulos/botteste.sh -O botteste.sh >/dev/null 2>&1 || {
        wget -q https://www.dropbox.com/s/m9tnme1jjbnehnj/botteste.sh >/dev/null 2>&1
    }
    
    chmod 777 v2raymanager >/dev/null 2>&1
    chmod 777 botteste.sh >/dev/null 2>&1
    
    # Create BOT directory
    mkdir -p $HOME/BOT >/dev/null 2>&1
    cd $HOME/BOT
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Sistema/ShellBot.sh >/dev/null 2>&1 || {
        wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Sistema/ShellBot.sh >/dev/null 2>&1
    }
    chmod 777 ShellBot.sh >/dev/null 2>&1
    cd >/dev/null 2>&1
    
    echo -e "\n\033[1;32mKEY VALID!\033[1;32m"
    sleep 1s
    echo ""
    
elif [[ "$resposta" = '2' ]]; then
    # ARM installation
    echo -e "\n\033[1;36mVERIFYING... \033[1;37m 16983:16085\033[0m"
    
    # Download listARM file
    rm -f $_Ink/listARM >/dev/null 2>&1
    wget -q -P $_Ink https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/listARM >/dev/null 2>&1 || {
        wget -q -P $_Ink https://www.dropbox.com/s/cs5poyigwm97dyd/listARM >/dev/null 2>&1
    }
    
    verif_key2
    sleep 3s
    
    # Create menu command
    echo "/bin/menu" > /bin/h
    chmod +x /bin/h >/dev/null 2>&1
    
    # Download version file
    rm -f versao* >/dev/null 2>&1
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Install/versao >/dev/null 2>&1 || {
        wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Install/versao >/dev/null 2>&1
    }
    
    # Download manager files
    cd /bin/ >/dev/null 2>&1
    rm -f v2raymanager >/dev/null 2>&1
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Modulos/v2raymanager >/dev/null 2>&1 || {
        wget -q https://raw.githubusercontent.com/kiritosshxd/SSHPLUS/main/Modulos/v2raymanager >/dev/null 2>&1
    }
    
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/main/Modulos/botteste.sh -O botteste.sh >/dev/null 2>&1 || {
        wget -q https://www.dropbox.com/s/m9tnme1jjbnehnj/botteste.sh >/dev/null 2>&1
    }
    
    chmod 777 v2raymanager >/dev/null 2>&1
    chmod 777 botteste.sh >/dev/null 2>&1
    
    # Create BOT directory
    mkdir -p $HOME/BOT >/dev/null 2>&1
    cd $HOME/BOT
    wget -q https://raw.githubusercontent.com/sansoe2022/VPN_SCRIPT/refs/heads/main/Sistema/ShellBot.sh >/dev/null 2>&1 || {
        wget -q https://www.dropbox.com/s/7dkgxy00x33c4y7/ShellBot.sh >/dev/null 2>&1
    }
    chmod 777 ShellBot.sh >/dev/null 2>&1
    cd >/dev/null 2>&1
    
    echo -e "\n\033[1;32mKEY VALID!\033[1;32m"
    sleep 1s
    echo ""
else
    echo -e "\n\033[1;31mInvalid option!\033[0m"
    sleep 1
    exit 1
fi

# Handle user database
if [[ -f "$HOME/usuarios.db" ]]; then
    clear
    echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
    echo ""
    echo -e " \033[1;33m• \033[1;31mATTENTION \033[1;33m• \033[0m"
    echo ""
    echo -e "\033[1;33mA User Database file \033[1;32m(usuarios.db) \033[1;33mwas found!"
    echo -e "Do you want to keep it preserving the simultaneous"
    echo -e "connection limit of users? Or do you want to"
    echo -e "create a new database?\033[0m"
    echo -e "\n\033[1;37m[\033[1;31m1\033[1;37m] \033[1;33mKeep Current Database\033[0m"
    echo -e "\033[1;37m[\033[1;31m2\033[1;37m] \033[1;33mCreate New Database\033[0m"
    echo -e "\n\033[0;34m═════════════════════════════════════════════════\033[0m"
    echo ""
    tput setaf 2
    tput bold
    read -p "Option ?: " -e -i 1 optiondb
    tput sgr0
else
    awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' > $HOME/usuarios.db 2>/dev/null
fi

[[ "$optiondb" = '2' ]] && {
    awk -F : '$3 >= 500 { print $1 " 1" }' /etc/passwd | grep -v '^nobody' > $HOME/usuarios.db 2>/dev/null
}

clear
tput setaf 7
tput setab 4
tput bold
printf '%35s%s%-18s\n' " PLEASE WAIT FOR INSTALLATION"
tput sgr0
echo ""
echo ""

# System update
echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mUPDATING SYSTEM \033[1;33m[\033[1;31m!\033[1;33m]\033[0m"
echo ""
echo -e " \033[1;33mUPDATES MAY TAKE SOME TIME!\033[0m"
echo ""

system_update() {
    apt-get update -y
    apt-get upgrade -y
    [[ ! -d /usr/share/.plus ]] && mkdir -p /usr/share/.plus
    echo "crz: $(date)" > /usr/share/.plus/.plus
}

fun_bar 'system_update'

clear
echo ""
echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mINSTALLING PACKAGES \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
echo ""
echo -e "\033[1;33mSOME PACKAGES ARE EXTREMELY NECESSARY!\033[0m"
echo ""

install_packages() {
    # Update package list
    apt-get update -y
    
    # Install essential packages
    _packages=("bc" "screen" "nano" "unzip" "lsof" "net-tools" "dos2unix" "nload" "jq" "curl" "figlet" "python3" "python3-pip" "at" "ufw" "iptables" "lsb-release" "wget" "git")
    
    for _prog in "${_packages[@]}"; do
        if ! dpkg -l | grep -q "^ii  $_prog"; then
            apt-get install $_prog -y >/dev/null 2>&1
        fi
    done
    
    # Install speedtest-cli
    pip3 install speedtest-cli >/dev/null 2>&1 || pip install speedtest-cli >/dev/null 2>&1
}

fun_bar 'install_packages'

# Open firewall ports
open_ports

clear
echo ""
echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mFINALIZING \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
echo ""
echo -e " \033[1;33mOPTIMIZING PYTHON \033[0m"
echo ""

fun_bar 'install_python'

clear
echo ""
echo -e " \033[1;33m[\033[1;31m!\033[1;33m] \033[1;32mFINALIZING \033[1;33m[\033[1;31m!\033[1;33m] \033[0m"
echo ""
echo -e " \033[1;33mCOMPLETING FUNCTIONS AND SETTINGS! \033[0m"
echo ""

# Run the main installer based on architecture
if [[ "$resposta" = '1' ]]; then
    fun_bar "$_Ink/list $_lnk $_Ink $_1nk"
else
    fun_bar "$_Ink/listARM $_lnk $_Ink $_1nk"
fi

clear
echo ""
cd $HOME
echo -e " \033[1;33m • \033[1;32mINSTALLATION COMPLETED\033[1;33m • \033[0m"
echo ""
echo -e "\033[1;31m \033[1;33mMAIN COMMAND: \033[1;32mmenu\033[0m"
echo -e "\033[1;33m MORE INFORMATION \033[1;31m(\033[1;36mTELEGRAM\033[1;31m): \033[1;37m@SSHPLUS\033[0m"
echo ""

# Cleanup (removed aggressive cleanup)
cat /dev/null > ~/.bash_history
history -c
